<Window x:Class="RSSReader.UI.NewChannelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add New Channel" Width="400" Height="250" Background="#252526" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition  />
            <RowDefinition  />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        <TextBlock FontSize="18" Foreground="White" Text="Add new Channel" VerticalAlignment="Center" Margin="10"/>
        <TextBox x:Name="txtTitle" FontSize="15" Grid.Row="1" Margin="10">title</TextBox>
        <TextBox x:Name="txtLink" FontSize="15" Grid.Row="2" Margin="10">link</TextBox>
        <Button x:Name="btnAdd" Content="Add" Grid.Row="3" Margin="10" Width="40" Background="#FFB757EE" BorderBrush="{x:Null}" />
    </Grid>
</Window>
